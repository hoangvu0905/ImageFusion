<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ImageFusion.ViewModels"
             x:Class="ImageFusion.Views.PreviewView"
             x:DataType="viewmodels:PreviewViewModel">
    
    <Grid RowDefinitions="*, Auto"
          Padding="16">
        
        <CarouselView x:Name="PreviewCarousel"
                      Grid.Row="0"
                      ItemsSource="{Binding PreviewImages}"
                      Position="{Binding CurrentPosition, Mode=TwoWay}"
                      IndicatorView="{x:Reference PreviewIndicator}"
                      Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="12"
                           Padding="8"
                           Margin="8"
                           HasShadow="True"
                           BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}">
                        <Grid RowDefinitions="*, Auto">
                            <Image Grid.Row="0"
                                   Source="{Binding ImageSource}"
                                   Aspect="AspectFit"
                                   HeightRequest="300" />
                            <Label Grid.Row="1"
                                   Text="{Binding Title}"
                                   HorizontalOptions="Center"
                                   FontSize="16"
                                   Margin="0,8,0,0" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        
        <IndicatorView x:Name="PreviewIndicator"
                       Grid.Row="1"
                       HorizontalOptions="Center"
                       Margin="0,16,0,0" />
    </Grid>
    
</ContentView>
