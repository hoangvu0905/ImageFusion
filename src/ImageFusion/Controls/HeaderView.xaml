<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:ImageFusion.Resources.Strings"
             x:Class="ImageFusion.Controls.HeaderView">
    
    <Border BackgroundColor="{StaticResource Primary}"
            Padding="16,12"
            StrokeThickness="0">
        <Grid ColumnDefinitions="*, Auto, Auto">
            <Label Grid.Column="0"
                   Text="{x:Static strings:AppResources.ApplicationTitle}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource White}"
                   VerticalOptions="Center" />
            
            <Button Grid.Column="1"
                    Text="{x:Static strings:AppResources.ButtonExport}"
                    Clicked="OnExportClicked"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="{StaticResource Primary}"
                    Margin="0,0,8,0" />
            
            <Button Grid.Column="2"
                    Text="{x:Static strings:AppResources.ButtonAdd}"
                    Clicked="OnAddClicked"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource Primary}" />
        </Grid>
    </Border>
    
</ContentView>
