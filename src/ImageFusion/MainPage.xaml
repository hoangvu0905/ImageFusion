<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ImageFusion.ViewModels"
             xmlns:tabs="clr-namespace:ImageFusion.Views.Tabs"
             xmlns:converters="clr-namespace:ImageFusion.Converters"
             x:Class="ImageFusion.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="ImageFusion">

    <ContentPage.Resources>
        <converters:TabIndexToBoolConverter x:Key="TabIndexToBoolConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="16,12" 
              BackgroundColor="{StaticResource Primary}"
              ColumnDefinitions="*,Auto,Auto">
            
            <Label Text="ImageFusion" 
                   FontSize="22" 
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center" />
            
            <Button Grid.Column="1"
                    Text="âž• Add"
                    Margin="8,0"
                    Command="{Binding AddImagesCommand}"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Padding="16,8" />
            
            <Button Grid.Column="2"
                    Text="ðŸ’¾ Export"
                    Command="{Binding ExportCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    Padding="16,8" />
        </Grid>

        <!-- Tab Bar at Top -->
        <Border Grid.Row="1" 
                StrokeThickness="0"
                BackgroundColor="{StaticResource White}"
                Padding="8">
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                <Button Grid.Column="0"
                       Text="ðŸ“· Original"
                       Command="{Binding SelectTabCommand}"
                       CommandParameter="1"
                       BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=1}"
                       TextColor="{StaticResource Primary}"
                       CornerRadius="20"
                       FontAttributes="Bold" />
                
                <Button Grid.Column="1"
                       Text="ðŸ‘ï¸ Preview"
                       Command="{Binding SelectTabCommand}"
                       CommandParameter="0"
                       BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=0}"
                       TextColor="{StaticResource Primary}"
                       IsEnabled="{Binding HasImages}"
                       CornerRadius="20"
                       FontAttributes="Bold" />
                
                <Button Grid.Column="2"
                       Text="âš™ï¸ Settings"
                       Command="{Binding SelectTabCommand}"
                       CommandParameter="2"
                       BackgroundColor="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=2}"
                       TextColor="{StaticResource Primary}"
                       CornerRadius="20"
                       FontAttributes="Bold" />
            </Grid>
        </Border>

        <!-- Tab Content -->
        <Grid Grid.Row="2" BackgroundColor="#F5F5F5">
            <!-- Original Tab -->
            <tabs:OriginalTabView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=1}" />

            <!-- Preview Tab -->
            <tabs:PreviewTabView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=0}" />

            <!-- Settings Tab -->
            <tabs:SettingsTabView IsVisible="{Binding SelectedTabIndex, Converter={StaticResource TabIndexToBoolConverter}, ConverterParameter=2}" />
        </Grid>
    </Grid>
</ContentPage>
